{
    "AWSEBDockerrunVersion": 2,
    "ContainerDefinitions": [
        {
            "name": "client",
            "image": "rajat7813/multi-client",
            "hostname": "client",
            "essential": false,
            "memory": 128
        },
        {
            "name": "server",
            "image": "rajat7813/multi-server",
            "hostname": "api",
            "essential": false,
            "memory": 128      
        },
        {
            "name": "worker",
            "image": "rajat7813/multi-worker",
            "hostname": "worker",
            "essential": false,
            "memory": 128            
        },
        {
            "name": "nginx",
            "image": "rajat7813/multi-nginx",
            "hostname": "nginx",
            "essential": true,
            "memory": 128,            
            "portMappings": [
                {
                "hostPort": 80,
                "containerPort": 80
                }
            ],
            "link": ["client", "server"]         
        }        
    ]
}